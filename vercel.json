{
  "version": 2,
  "buildCommand": "npm install && cd client && npm install && npm run build && cd ..",
  "outputDirectory": "public",
  "builds": [
    {
      "src": "src/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "src/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "public/$1"
    }
  ]
}
